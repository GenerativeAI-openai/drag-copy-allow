{
  "manifest_version": 3,
  "name": "드래그/복사, 자바스크립트 차단 허용 장치",
  "version": "1.0",
  "description": "자바스크립트를 차단하고, 웹사이트에서 마우스 드래그 및 복사 제한을 해제하세요.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": false,
        "path": "rules.json"
      }
    ]
  }
}